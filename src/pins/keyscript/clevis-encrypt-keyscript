[ $# -eq 1 ] && [ "$1" == "--summary" ] && exit 2

if ! cfg="$(jose fmt -j "$1" -Oo- 2>/dev/null)"; then
    echo "Configuration is malformed!" >&2
    exit 1
fi

jwe='{"protected":{"clevis":{"pin":"keyscript"}}}'
jwe="$(jose fmt -j "$jwe" -Og protected -g clevis -j "$cfg" -Os cfg -UUUo-)"

keyscript=$(echo $cfg | jose fmt -j- -Og keyscript -u-)
key=$(exec $keyscript)
jwk=$(jose jwk gen -i '{"alg":"A256GCM"}' | jose fmt -j- -O -q $key -Ss k -Uo-)

exec jose jwe enc -i- -k- -I- -c < <(echo -n "$jwe$jwk"; /bin/cat)
